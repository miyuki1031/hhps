datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")// url      = "file:./dev.db"  // ここにURLを戻します
}

generator client {
  provider = "prisma-client-js"
}

model Todo {
  id        Int      @id @default(autoincrement())
  title     String
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
}
model TodoListA {
  id           Int      @id @default(autoincrement())
  title        String
  completed    Boolean  @default(false)
  
  // 新しい項目
